<div class="container">
  <h1>Blog</h1>

  <% @posts.each do |post| %>
    <div class="post">
      <h2><%= link_to post.title, post_path(post) %></h2>
      <p><%= post.content %></p>
      <p><%= post.post_category.name %></p>
      <p><%= link_to 'Read more', post_path(post) %></p>
    </div>
  <% end %>

  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
